<Window x:Class="ProjetoLojaAutoPeça.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoLojaAutoPeça"
        mc:Ignorable="d"
        Title="Login" Height="550" Width="380"
        WindowStyle="None" ResizeMode="NoResize" MouseDown="Window_MouseDown"
        AllowsTransparency="True" Background="Transparent">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border  Grid.RowSpan="2" 
                    CornerRadius="20" Padding="20">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#283618" Offset="0.1"/>
                        <GradientStop Color="#caf0f8" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <StackPanel Grid.Row="0" VerticalAlignment="Center">
                <TextBlock Text="Login" 
                           FontSize="65"
                           FontFamily="Helvetica"
                           FontWeight="Bold" 
                           Foreground="#dad7cd"
                           Opacity="0.8"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Username"
                           FontFamily="Helvetica"
                           FontSize="20"
                           Foreground="White"
                           Opacity="0.8" 
                           Margin="10,0,0,0"/>

                    <TextBox x:Name="UserTxt" 
                             HorizontalAlignment="Left" 
                             Width="189" 
                             Height="28"
                             Background="Transparent"    
                             BorderThickness="0" 
                             Margin="5,0,0,0"
                             FontFamily="Helvetica"
                             FontSize="20"
                             Foreground="White"
                             Opacity="0.5" />
                </StackPanel>
                <Border BorderBrush="White" 
                        BorderThickness="2" 
                        Width="200" 
                        Opacity="0.6"
                        HorizontalAlignment="Center"
                        Margin="35,0,0,0"/>
                <StackPanel Orientation="Horizontal" Margin="0,35,0,0">
                    <Label Content="Password"
                           FontFamily="Helvetica"
                           FontSize="20"
                           Foreground="White"
                           Opacity="0.8" 
                           Margin="10,0,0,0"/>

                    <PasswordBox x:Name="PassTxt" 
                             HorizontalAlignment="Left" 
                             Width="189" 
                             Height="25"
                             Background="Transparent"    
                             BorderThickness="0" 
                             Margin="5,0,0,0"
                             FontFamily="Helvetica"
                             FontSize="20"
                             Foreground="White"
                             Opacity="0.5" 
                             MaxLength="16"
                             />
                </StackPanel>
                <Border BorderBrush="White" 
                        BorderThickness="2" 
                        Width="200" 
                        Opacity="0.6"
                        HorizontalAlignment="Center"
                        Margin="35,0,0,10"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button Height="78"
                            Width="120"
                            Content="Entrar"
                            FontSize="25"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Left"
                            Click="OnSubmit"
                            Cursor="Hand"
                            IsDefault="True"/>

                    <Button Height="78"
                            Width="120"
                            Content="Voltar"
                            FontSize="25"
                            Margin="20,20,0,0"
                            HorizontalAlignment="Right" 
                            Click="OnClose"
                            Cursor="Hand"/>

                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
